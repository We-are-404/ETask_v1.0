<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.isleslie.marble.mapper.UserMapper">

    <select id="selectUserByUsernameAndPassword" resultType="Boolean">
        select count(*) from user where username = #{username} and password = #{password}
    </select>

    <select id="selectUserByPhoneNumberAndPassword" resultType="Boolean">
        select count(*) from user where phone_number = #{phoneNumber} and password = #{password}
    </select>

    <insert id="addUser" parameterType="User">
        insert into
        user(`username`, `password`, `phone_number`, `create_time`, `avatar_url`, `team`)
        values (#{username}, #{password}, #{phoneNumber}, #{createTime}, NULL, #{team});
    </insert>

    <select id="findAllUsers" resultType="User">
        select * from user
    </select>

    <select id="findUserByUsername" resultType="User">
        select * from user where username = #{username}
    </select>

    <select id="findUserByPhoneNumber" resultType="User">
        select * from user where phone_number = #{phoneNumber}
    </select>
</mapper>